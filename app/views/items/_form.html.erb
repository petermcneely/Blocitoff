<h4>Create a to do item</h4>
<%= form_for [user, item] do |f|%>
	<div class='form_group'>
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control', placeholder: 'Enter item here' %>
	</div>
	<div class='form-group'>
		<%= f.submit "Create", class: 'btn btn-success' %>
	</div>
<% end %>